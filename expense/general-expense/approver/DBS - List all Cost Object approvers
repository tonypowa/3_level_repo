--Displays a list of all Cost Object Approvers.

SELECT EM.EMP_ID AS EMEMP_ID, EM.EMAIL_ADDRESS AS EMEMAILADDRESS,  
EM.FIRST_NAME AS EMFIRST_NAME, EM.LAST_NAME AS EMLAST_NAME,  
LI1.LI_SHORT_CODE AS LI1LI_SHORT_CODE, EXCPT_APPRV_AUTH,  
APPROVAL_LIMIT, CRN_ALPHA_CODE  
FROM CT_AUTHORIZED_APPROVER AA  
JOIN CT_HIERARCHY_NODE HN ON AA.HIER_NODE_KEY = HN.HIER_NODE_KEY  
JOIN CT_EMPLOYEE EM ON AA.EMP_KEY = EM.EMP_KEY  
JOIN CT_LIST_ITEM LI1 ON HN.SEGMENT_1 = LI1.LI_KEY 
WHERE EM.ACTIVE = 'Y'  ORDER BY LI1.LI_SHORT_CODE,EM.EMP_ID 
